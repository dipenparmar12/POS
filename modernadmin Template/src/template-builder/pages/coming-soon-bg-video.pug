extends template

block pageVars
	- var pageTitle    = "Coming Soon minimal"
	- var description  = "Temporary text"
	- var activeMenu   = "coming-soon-bg-video"

append pageConfig
	- var contentLayout = '1-column'
	- var navbarFixed = false
	- var blankPage = true
	- var centerLayout = false
	- var bodyCustom = 'comingsoonVideo'
	- var centerLayout = false

//- Include page content in page block
append content
	include ../contents/coming-soon-bg-video.html

//- Vendor CSS
//------------------------------
//- Add Vendor specific CSS
append vendorcss
	link(rel='stylesheet', type='text/css', href=app_assets_path + '/vendors/css/extensions/bgvideo/video-js.min.css')
	link(rel='stylesheet', type='text/css', href=app_assets_path + '/vendors/css/extensions/bgvideo/bigvideo.css')

//- Vendor JS
//------------------------------
//- Add vendor specific JS
append vendorjs
	script(src=app_assets_path + '/vendors/js/coming-soon/jquery.countdown.min.js', type='text/javascript')
	script(src=app_assets_path + '/vendors/js/bgvideo/video.min.js', type='text/javascript')
	script(src=app_assets_path + '/vendors/js/bgvideo/imagesloaded.pkgd.min.js', type='text/javascript')
	script(src=app_assets_path + '/vendors/js/bgvideo/bigvideo.js', type='text/javascript')
	script(src=app_assets_path + '/vendors/js/bgvideo/jquery.tubular.1.0.js', type='text/javascript')

//- Page CSS
//------------------------------
//- Add custom page specific CSS
append pagecss
	link(rel='stylesheet', type='text/css', href=app_assets_path + '/css'+rtl+'/pages/coming-soon.css')

//- Page JS
//------------------------------
//- Add custom page specific JS
append pagejs
	script(src=app_assets_path + '/js/scripts/coming-soon/coming-soon.js', type='text/javascript')