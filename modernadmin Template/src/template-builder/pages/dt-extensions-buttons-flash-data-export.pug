extends template

block pageVars
	- var pageTitle    = "Flash Data Export"
	- var pageSubTitle = "Create and save files on the client-side"
	- var description  = "The Flash export buttons provide an option for legacy browsers (IE9-) to create and save files on the client-side, without any server interaction required."
	- var activeMenu   = "dt-extensions-buttons-flash-data-export"



block breadcrumbs
	+breadcrumbs([{url:"index.html",name:"Home"},{url:"#",name:"DataTables"}, {name:"Flash Data Export"}])



//- Include page content in page block
append content
	include ../contents/dt-extensions-buttons-flash-data-export.html

//- Vendor CSS
//------------------------------
//- Add Vendor specific CSS
append vendorcss
	link(rel='stylesheet', type='text/css', href=app_assets_path + '/vendors/css/tables/datatable/datatables.min.css')
	link(rel='stylesheet', type='text/css', href=app_assets_path + '/vendors/css/tables/extensions/buttons.dataTables.min.css')
	link(rel='stylesheet', type='text/css', href=app_assets_path + '/vendors/css/tables/datatable/buttons.bootstrap4.min.css')

//- Vendor JS
//------------------------------
//- Add vendor specific JS
append vendorjs
	script(src=app_assets_path + '/vendors/js/tables/datatable/datatables.min.js', type='text/javascript')
	script(src=app_assets_path + '/vendors/js/tables/datatable/dataTables.buttons.min.js', type='text/javascript')
	script(src=app_assets_path + '/vendors/js/tables/datatable/buttons.bootstrap4.min.js', type='text/javascript')
	script(src=app_assets_path + '/vendors/js/tables/buttons.flash.min.js', type='text/javascript')

//- Page JS
//------------------------------
//- Add custom page specific JS
append pagejs
	//- Custom JS
	script(src=app_assets_path + '/js/scripts/tables/datatables-extensions/datatable-button/datatable-flash.js', type='text/javascript')