extends template

block pageVars
	- var pageTitle    = "Chartjs Pie & Doughnut Chart"
	- var pageSubTitle = "chartjs pie & doughnut chart examples"
	- var description  = "A pie chart (or a doughnut chart) is a circular statistical graphic, which is divided into slices to illustrate numerical proportion. In a pie chart, the arc length of each slice (and consequently its central angle and area), is proportional to the quantity it represents."
	- var activeMenu   = "chartjs-pie-doughnut-charts"



block breadcrumbs
	+breadcrumbs([{url:"index.html",name:"Home"},{url:"#",name:"Chartjs"}, {name:"Pie & Doughnut Chart"}])

//- Include page content in page block
append content
	include ../contents/chartjs-pie-doughnut-charts.html

//- Vendor JS
//------------------------------
//- Add vendor specific JS
append vendorjs
	script(src=app_assets_path + '/vendors/js/charts/chart.min.js', type='text/javascript')

//- Page JS
//------------------------------
//- Add custom page specific JS
append pagejs
	script(src=app_assets_path + '/js/scripts/charts/chartjs/pie-doughnut/pie.js', type='text/javascript')
	script(src=app_assets_path + '/js/scripts/charts/chartjs/pie-doughnut/pie-simple.js', type='text/javascript')
	script(src=app_assets_path + '/js/scripts/charts/chartjs/pie-doughnut/doughnut.js', type='text/javascript')
	script(src=app_assets_path + '/js/scripts/charts/chartjs/pie-doughnut/doughnut-simple.js', type='text/javascript')