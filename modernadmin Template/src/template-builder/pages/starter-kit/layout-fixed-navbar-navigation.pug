extends template

block pageVars
	- var pageTitle    = "Fixed Navbar & Navigation"
	- var pageSubTitle = "Fixed navbar with fixed navigation"
	- var description  = "The fixed navbar & navigation page structure have fixed navbar and navigation, static footer."
	- var activeMenu   = "fixed-navbar-navigation"



append pageConfig
	- var headerType = 'sk-header'
	- var starterKit  = true

append navbarConfig
	- var navbarPosition = "fixed-top"
	- var navbarHideOnScroll = false

append horizontalMenuConfig
	- var horizontalMenuType = 'navbar-fixed'

append verticalMenuConfig
	- var menuType = 'menu-fixed'

block breadcrumbs
	+breadcrumbs([{url:"index.html",name:"Home"},{url:"#",name:"Starters Kit"}, {name:"Fixed Navbar & Navigation"}])

//- include  page content in page block
append content
	include ../../contents/starter-kit/starter-page-content.html
