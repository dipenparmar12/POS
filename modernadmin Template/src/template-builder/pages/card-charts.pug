extends template

block pageVars
	- var pageTitle   = "Advance Chart Cards"
	- var pageSubTitle = "Extended default cards"
	- var description = "Exteding default bootstrap card functionality."
	- var activeMenu  = "card-charts"

block breadcrumbs
	+breadcrumbs([{url:"index.html",name:"Home"},{url:"#",name:"Components"}, {name:"Advance Charts"}])

//- Include page content in page block
append content
	include ../contents/card-charts.html

//- Vendor CSS
//------------------------------
//- Add vendor specific CSS
append vendorcss
	link(rel='stylesheet', type='text/css', href=app_assets_path + '/vendors/css/charts/chartist.css')
	link(rel='stylesheet', type='text/css', href=app_assets_path + '/vendors/css/charts/chartist-plugin-tooltip.css')
	link(rel='stylesheet', type='text/css', href=app_assets_path + '/vendors/css/charts/morris.css')

//- Vendor JS
//------------------------------
//- Add vendor specific JS
append vendorjs
	//- Morris Chart
	script(src=app_assets_path + '/vendors/js/charts/raphael-min.js', type='text/javascript')
	script(src=app_assets_path + '/vendors/js/charts/morris.min.js', type='text/javascript')
	//- Chartist js
	script(src=app_assets_path + '/vendors/js/charts/chartist.min.js', type='text/javascript')
	script(src=app_assets_path + '/vendors/js/charts/chartist-plugin-tooltip.js', type='text/javascript')
	//- Chart JS
	script(src=app_assets_path + '/vendors/js/charts/chart.min.js', type='text/javascript')

//- Page JS
//------------------------------
//- Add custom page specific JS
append pagejs
	//- Advance cards JS
	script(src=app_assets_path + '/js/scripts/cards/card-charts.js', type='text/javascript')

append pagecss
	link(rel='stylesheet', type='text/css', href=app_assets_path + '/css'+rtl+'/core/colors/palette-gradient.css')
	link(rel='stylesheet', type='text/css', href=app_assets_path + '/css'+rtl+'/pages/card-charts.css')
