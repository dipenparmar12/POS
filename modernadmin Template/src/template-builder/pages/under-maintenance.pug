extends template

block pageVars
	- var pageTitle    = "Under Maintenance"
	- var pageSubTitle = "User Login page with background image"
	- var description  = "User login page with background image option."
	- var activeMenu   = "under-maintenance"

append pageConfig
	- var contentLayout = '1-column'
	- var blankPage = true //- OPTIONS: true, false
	- var navbarFixed = false
	- var bodyCustom = 'bg-maintenance-image' // You can change the bg image from content.scss
	- var centerLayout = false

//- Include page content in page block
append content
	include ../contents/under-maintenance.html

//- Page CSS
//------------------------------
